.top-elements
	display flex
	flex-flow row
	&-item
		width 23%
		margin 1%
		display inline-block

		border 1px solid rgba(128, 128, 128, 0.21)
		transition .2s all ease
		&:hover
			box-shadow 0 0 4px 2px rgba(0, 0, 0, 0.2)
		&__link
			width 100%
			img
				box-sizing border-box
				padding 15px
				width 100%
		&__description
			background: #e9e9f0;
