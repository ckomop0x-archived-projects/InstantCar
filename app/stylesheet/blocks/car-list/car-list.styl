.cars-list
	width: 66%;
	padding 0 3%
	&-item
		width 100%
		border: 1px solid #e0e0e0;
		margin-bottom 16px
		transition .2s all ease
		&:hover
			box-shadow 0 0 4px 2px rgba(0, 0, 0, 0.2)

		&__image
			box-sizing border-box
			padding 16px
			width 30%
			display inline-block
			vertical-align top
			img
				width 100%

		&__description
			box-sizing border-box
			width 70%
			display inline-block
			padding-left 16px
			vertical-align top
			h2
				margin 0
				padding 16px
				font-size 20px

			&-text
				padding 16px 0 0 0
				font-size 16px

			&-link
				display: inline-block;
				border-radius: 5px;
				padding: 10px 20px;
				margin: 16px auto;
				color: #fff;
				background: #ffb400;
				border: 1px solid #ffb400;