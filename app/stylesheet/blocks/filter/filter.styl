			margin-bottom: 0;
			margin-top: 0;
			@media (min-width $screen-xs)
				text-align: center;
			@media (min-width $screen-sm)
				text-align: left;

		&__subtitle
			text-align left
			padding 10px
			margin 0

		&-select
			width: 90%;
			height: 40px;
			padding: 5px 12px;
			margin-left 10px
			background: #FFF;
			color: #8D8D8D;
			border: 1px solid #e0e0e0;
			border-radius: 0;
			display: inline-block;
			-webkit-appearance: none;
			-moz-appearance: none;
			appearance: none;
			cursor: pointer;
			outline: none;
			text-indent: 5px;

